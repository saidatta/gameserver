<script type="text/javascript">	
	function buildTree(orgRankNode, nodeParent, index, indent) {
		var parentId = $(nodeParent).attr("id");
		var indentClass = "indent" + indent;
	    var subMenu = "subMenu" + index;
	    index = index + 1;
		var newList = document.createElement("ul");
		var listItem = document.createElement("li");
		var orgRankId = orgRankNode["id"];
		var orgRankName = orgRankNode["name"];
		var displayName = orgRankNode["displayName"];
		var itemHtml;
		var children = orgRankNode["children"];
		if (children.length > 0) {
			itemHtml = '<div class="on-same-line"><button type="button" class="addParent fa fa-plus" onclick="clickPlus(\''+orgRankId+'\',\''+orgRankName+'\');"></button> <span id="'+orgRankId+'Txt" class="outline pointer-cursor basic-padding" onclick="clickText(\''+orgRankId+'\');">'+displayName+' <span class="caret"></span></span></div>';
		} else {
			itemHtml = '<div class="on-same-line"><button type="button" class="addParent fa fa-plus" onclick="clickPlus(\''+orgRankId+'\',\''+orgRankName+'\');"></button> <span id="'+orgRankId+'Txt" class="outline pointer-cursor basic-padding" onclick="clickText(\''+orgRankId+'\');">'+displayName+'</span> </div>';
		}
		$(listItem).html(itemHtml);
		$(listItem).attr("id", orgRankId);
		$(listItem).addClass(parentId);
		$(newList).append(listItem);
		$(nodeParent).append(newList);
		if ($(orgRankNode).attr("id") != "ROOT") {
			$(listItem).attr("hidden", "hidden");
		}
		
		if (children.length > 0) {
			indent = indent + 1;
			$(children).each(function() {
				buildTree(this, listItem, index, indent);
				index = index + 1;
			});
		}
		return index;
	}
	
	function clickPlus(parentOrgRankId, parentOrgRankName) {
		$("#hiddenParentId").val(parentOrgRankId);
		$("#orgRankParentName").val(parentOrgRankName);
		event.preventDefault();
	}
	
	function clickText(orgRankId) {
//		var orgRank = $("#"+orgRankId);
        var search = "."+orgRankId;
		var children = $(search);
		$.each(children, function() {
			var hidden = $(this).attr("hidden");
			if (hidden == "hidden") {
				$(this).removeAttr("hidden");
			} else {
				$(this).attr("hidden", "hidden");
			}
		});
	}
</script>   
